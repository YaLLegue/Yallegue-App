<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="16dp"
              android:paddingRight="16dp"
              android:paddingTop="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="CREAR PARTIDA"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/letter_large"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:gravity="center|start"
        android:text="Nombre de Partida"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/letter_large"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center|start"
        android:text="Apuesta"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/letter_large"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center|start"
        android:text="Destino"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="@dimen/letter_large"/>

    <EditText
        android:id="@+id/label_destine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Constituyentes (METRO)"/>

    <Button
        android:id="@+id/button_invite"
        style="@style/Widget.Button.Invite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="Invitar Amigos"/>

</LinearLayout>